{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MemoryClaim",
  "type": "object",
  "required": ["hash", "domain", "text", "source"],
  "properties": {
    "hash": {"type": "string", "description": "SHA-256 truncated hash of claim text"},
    "domain": {"type": "string", "enum": ["urls", "apis", "credentials", "concepts", "tools", "dates", "agent_names", "quotes"]},
    "text": {"type": "string", "maxLength": 500},
    "source": {"type": "string", "description": "file:line reference"},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "staleness_prob": {"type": "number", "minimum": 0, "maximum": 1},
    "last_verified": {"type": "string", "format": "date"},
    "half_life_days": {"type": "integer"},
    "age_days": {"type": "integer"},
    "predicted_stale": {"type": "string", "format": "date"}
  }
}
